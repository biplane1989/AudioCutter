<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogConvert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <declare-styleable name="TestView">
        <attr name="textRandom" format="string" />
    </declare-styleable>


    <style name="color_line_edt">
        <item name="colorAccent">@color/colorYelowDark</item>
    </style>

    <style name="MyStudioTabText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18dp</item>
    </style>

    <declare-styleable name="MaterialSpinner" tools:ignore="ResourceName">
        <attr name="ms_arrow_tint" format="color" />
        <attr name="ms_hide_arrow" format="boolean" />
        <attr name="ms_background_color" format="color" />
        <attr name="ms_text_color" format="color" />
        <attr name="ms_dropdown_max_height" format="dimension" />
        <attr name="ms_dropdown_height" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="ms_background_selector" format="integer" />
        <attr name="ms_padding_top" format="dimension" />
        <attr name="ms_padding_left" format="dimension" />
        <attr name="ms_padding_bottom" format="dimension" />
        <attr name="ms_padding_right" format="dimension" />
        <attr name="ms_popup_padding_top" format="dimension" />
        <attr name="ms_popup_padding_left" format="dimension" />
        <attr name="ms_popup_padding_bottom" format="dimension" />
        <attr name="ms_popup_padding_right" format="dimension" />
        <attr name="ms_hint" format="string" />
        <attr name="ms_hint_color" format="color" />
    </declare-styleable>

    <style name="themeSeekbar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dialog_convert_seekbar_color</item>
        <item name="colorPrimaryDark">@color/dialog_convert_seekbar_color</item>
        <item name="colorAccent">@color/dialog_convert_seekbar_color</item>
    </style>

    <style name="editTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/dialog_convert_seekbar_color</item>
        <item name="colorControlHighlight">@color/dialog_convert_seekbar_color</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogTitle">
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogGray" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/colorHintText</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>