<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/d_10"
        android:paddingStart="@dimen/d_16">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_icon_app_flash"
            android:layout_width="@dimen/d_48"
            android:layout_height="@dimen/d_48"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_icon_app_flash"-->
        <!--            android:layout_width="@dimen/d_48"-->
        <!--            android:layout_height="@dimen/d_48"-->
        <!--            android:scaleType="centerInside"-->
        <!--            android:src="@mipmap/ic_launcher" />-->

        <TextView
            android:id="@+id/tv_name_app_flash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_light"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/d_16"
            android:text="Facebook"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_16"
            android:textStyle="bold" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_chooser_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/d_12"
            app:switchMinWidth="@dimen/d_40"
            app:thumbTint="@color/color_state_thumb"
            app:trackTint="@color/color_state_track" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorgrayAlpha" />

</LinearLayout>