<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/sanfranciscodisplay_bold"
                    android:gravity="center"
                    android:text="@string/my_studio_dialog_set_as_title"
                    android:textColor="#2E3041"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RadioGroup
                android:layout_marginTop="20dp"
                android:id="@+id/rg_setas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <RadioButton
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/rb_ringtone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FDAA74"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:shadowColor="#FDAA74"
                    android:text="@string/my_studio_dialog_set_as_ringtone"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/rb_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FDAA74"
                    android:checked="true"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:text="@string/my_studio_dialog_set_as_alarm"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/rb_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FDAA74"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:text="@string/my_studio_dialog_set_as_notification"
                    android:textSize="16sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_40">

                <TextView
                    android:id="@+id/tv_cancel_dialog_set_as"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_set_dialog_set_as"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:gravity="center"
                    android:text="SET"
                    android:textColor="#FDAA74"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>