<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_line_background_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_line_background_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,181:100"
        app:layout_constraintEnd_toEndOf="@+id/right_line_background_vertical"
        app:layout_constraintStart_toStartOf="@+id/left_line_background_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_introduction_scence_1_vector_background" />

    <ImageView
        android:id="@+id/iv_floor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintEnd_toEndOf="@+id/right_line_background_vertical"
        app:layout_constraintStart_toStartOf="@+id/left_line_background_vertical"
        app:srcCompat="@drawable/ic_introduction_scence_1_vector_floor" />
    <View
        android:id="@+id/base_line_person"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_background"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        app:layout_constraintStart_toStartOf="@+id/left_line_background_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/base_line_person"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_introduction_scence_1_vector_person" />




</androidx.constraintlayout.widget.ConstraintLayout>