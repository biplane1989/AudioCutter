<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".activities.acttest.CoreTestActivity">

    <Button
        android:id="@+id/test_cut_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/cut" />

    <Button
        android:id="@+id/test_concat_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_cut_bt"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="merge" />

    <Button
        android:id="@+id/test_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_concat_bt"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="cancel" />


    <Button
        android:id="@+id/test_mix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_cancel"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="mix" />


</RelativeLayout>
