<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/d_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_56"
        android:background="?attr/selectableItemBackground">

        <EditText
            android:id="@+id/edt_recent_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edt_audiocutter_screen"
            android:focusableInTouchMode="true"
            android:paddingStart="40dp"
            android:singleLine="true"
            android:visibility="gone">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/iv_recent_screen_back"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_audiocutter_back" />


        <ImageView
            android:id="@+id/iv_recent_screen_back_edt"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_audiocutter_back" />

        <TableRow
            android:id="@+id/tb_name_recent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_recent_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:text="Recent Added"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_18" />

            <ImageView
                android:layout_width="@dimen/d_10"
                android:layout_height="@dimen/d_10"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_audiocutter_screen"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_show_below" />
        </TableRow>


        <ImageView
            android:id="@+id/iv_recent_screen_search"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_audiocutter_search" />

        <ImageView
            android:id="@+id/iv_audiorecent_screen_file"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_recent_screen_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_audiocutter_file" />

        <ImageView
            android:id="@+id/iv_recent_screen_close"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="@dimen/d_5"
            android:src="@drawable/ic_audiocutter_close"
            android:visibility="gone" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_audio_recent" />

    <TextView
        android:id="@+id/tv_empty_list_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        android:text="No result."
        android:textColor="@color/colorgray"
        android:textSize="@dimen/d_18"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_56"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:text="2 file"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorGray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:text="next"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_18" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="@dimen/d_5"
                android:src="@drawable/ic_recent_next"
                app:tint="@color/colorBlack" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>