<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_count_file_dialog"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="@dimen/d_16"
                android:layout_marginRight="@dimen/d_16"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:gravity="center"
                android:text="2 File to be merged"
                android:textColor="#2E3041"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:paddingHorizontal="@dimen/d_16"
                android:text="file name" />

            <EditText

                android:id="@+id/edt_filename_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_56"
                android:background="@color/colorWhite"
                android:paddingHorizontal="@dimen/d_16"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorYelowDark"
                android:paddingHorizontal="@dimen/d_16" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_48">

                <TextView
                    android:id="@+id/tv_cancel_dialog_merge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_ok_dialog_merge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:gravity="center"
                    android:text="MERGER"
                    android:textColor="#FDAA74"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>