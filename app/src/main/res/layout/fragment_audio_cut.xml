<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".functions.fragmentCutterScreen.AudioCutFragment">

        <RelativeLayout
            android:id="@+id/fragment_cutter_title_rl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/fragment_cutter_close_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/fragment_cutter_close_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/fragment_cutter_close_iv"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:text="@string/AUDIO_CUTTER"
                android:textColor="@color/fragment_cutter_text_title_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/fragment_cutter_tick_iv"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/fragment_cutter_tick_ic" />

            <ImageView
                android:id="@+id/fragment_cutter_option_iv"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_toLeftOf="@id/fragment_cutter_tick_iv"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/fragment_cutter_custom_ic" />
        </RelativeLayout>

        <com.example.audiocutter.ui.fragment_cut.WaveformEditView
            android:layout_above="@id/fragment_cutter_ads_view"
            android:id="@+id/fragment_cutter_wave_edit_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/fragment_cutter_title_rl" />

        <TextView
            android:id="@+id/fragment_cutter_time_audio_tv"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@id/fragment_cutter_ads_view"
            android:fontFamily="@font/sanfrancisco_medium"
            android:gravity="center"
            android:text="05:23.9"
            android:textColor="@color/fragment_cutter_text_time_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/fragment_cutter_ads_view"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_above="@id/fragment_cutter_group_controller_rl"
            android:background="#4DFCB674" />

        <RelativeLayout
            android:id="@+id/fragment_cutter_group_controller_rl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_reduced_time_ic" />

                <TextView
                    android:id="@+id/fragment_cutter_start_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sanfrancisco_medium"
                    android:text="00:10.4"
                    android:textColor="@color/fragment_cutter_text_time_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_increase_time_ic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_cutter_group_end_time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_reduced_time_ic" />

                <TextView
                    android:id="@+id/fragment_cutter_end_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sanfrancisco_medium"
                    android:text="00:10.4"
                    android:textColor="@color/fragment_cutter_text_time_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_increase_time_ic" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_cutter_group_end_time_ll"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/play_controller_shuffe_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/ripple_item_view"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_zoom_out_ic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/play_controller_play_rl"
                    android:layout_toRightOf="@id/play_controller_shuffe_iv"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/play_controller_pre_iv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_item_view"
                        android:scaleType="center"
                        android:src="@drawable/fragment_cutter_previous_ic" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/play_controller_play_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/play_controller_play_iv"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/play_selector"
                        android:scaleType="center"
                        android:src="@drawable/fragment_cutter_play_ic" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/play_controller_repeat_iv"
                    android:layout_toRightOf="@id/play_controller_play_rl"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/play_controller_next_iv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_item_view"
                        android:scaleType="center"
                        android:src="@drawable/fragment_cutter_next_ic" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/play_controller_repeat_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/ripple_item_view"
                    android:scaleType="center"
                    android:src="@drawable/fragment_cutter_zoom_in_ic" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
