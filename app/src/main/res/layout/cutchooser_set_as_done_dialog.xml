<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/d_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/iv_cancel_dialog_done"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:src="@drawable/ic_cancel_dialog" />

            <ImageView

                android:id="@+id/edt_new_name"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/ic_setas_done" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_item_dialog"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="@string/successfully"
                android:textColor="#2E3041"
                android:textSize="@dimen/text_size_header"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>