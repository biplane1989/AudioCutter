<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <androidx.cardview.widget.CardView
        android:id="@+id/lock_notification_main_screen_ignore_list_dialog"
        android:layout_width="230dp"
        android:layout_height="285dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sort_by_name_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/menu_sort_audio_sort_by_name"
                android:textColor="#2E3041"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/separate_line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrayAlpha"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sort_by_name_button" />

            <TextView
                android:id="@+id/sort_by_date_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/menu_sort_audio_sort_by_date"
                android:textColor="#2E3041"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separate_line_1" />

            <TextView
                android:id="@+id/separate_line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrayAlpha"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sort_by_date_button" />

            <TextView
                android:id="@+id/sort_by_duration_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/menu_sort_audio_sort_by_duration"
                android:textColor="#2E3041"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separate_line_2" />

            <TextView
                android:id="@+id/separate_line_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrayAlpha"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sort_by_duration_button" />

            <TextView
                android:id="@+id/sort_by_size_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/menu_sort_audio_sort_by_size"
                android:textColor="#2E3041"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separate_line_3" />

            <TextView
                android:id="@+id/separate_line_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrayAlpha"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sort_by_size_button" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_line_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/longest_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/menu_sort_audio_bg_selected_sort_button"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="@string/menu_sort_audio_asc"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintRight_toRightOf="@+id/vertical_line_center"
                app:layout_constraintTop_toBottomOf="@+id/separate_line_4" />

            <TextView
                android:id="@+id/shortest_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_sort_audio_bg_unselected_sort_button"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="@string/menu_sort_audio_desc"
                android:textColor="#9C9C9C"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/vertical_line_center"
                app:layout_constraintTop_toBottomOf="@+id/separate_line_4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>