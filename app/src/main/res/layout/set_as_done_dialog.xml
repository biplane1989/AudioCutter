<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_setas_done" />

        <ImageView
            android:id="@+id/iv_cancal_dialog_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/d_16"
            android:layout_marginRight="@dimen/d_16"
            android:src="@drawable/ic_cancel_dialog" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_done"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/d_16"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/d_16"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:text="@string/successfully"
            android:textColor="#2E3041"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>