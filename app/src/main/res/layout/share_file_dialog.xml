<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdl_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rv_test_cdl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:behavior_peekHeight="320dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
           >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d_16"
                android:text="Choose a sharing app"
                android:textSize="@dimen/d_20" />

            <ImageView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/iv_cancel_dialog"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cancel_dialog" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_height="match_parent"
                android:id="@+id/rv_app_share"
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_marginTop="?actionBarSize"
                tools:listitem="@layout/item_share_file" />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>