<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetTop="0.0px"
    android:insetRight="1.0px"
    android:insetBottom="1.0px">

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="@color/colorYelowDark"
                    android:startColor="@color/colorYelow" />
                <corners android:radius="11dp" />
            </shape>
        </item>
        <item>
            <shape>
                <stroke
                    android:width="1.0px"
                    android:color="@color/colorGray" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/colorYelow"
                    android:startColor="@color/colorYelowDark" />
                <corners android:radius="10dp" />
            </shape>
        </item>
    </selector>
</inset>